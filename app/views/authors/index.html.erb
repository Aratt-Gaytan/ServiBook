<%= render 'shared/header_admin' if user_signed_in?  %>

<%= link_to "New Author", new_author_path, class: 'btn btn-light m-3 bi bi-arrow-90deg-left text-dark' if current_user.role_id == 1%>

<div class="container p-4 mt-4">
  <h1 class="text-center">Authors</h1>
  <div class="row">

  <% @authors.each do |author| %>
    <div class="col">
      <div class="card" style="width: 9rem;">
          
          <% if author.photo.attached? %>
            <%= image_tag(author.photo,  class: 'card-img-top')  %>
          <% else %>
            <%= image_tag 'default.jpg', class: 'card-img-top' %>
          <% end %>
          
        <div class="card-body">
          <%= link_to "#{author.first_name} #{author.last_name}", author_path(author) ,class: 'card-text' %>
        </div>
      </div>
    </div>
    
     
  <% end %>

  </div>
</div>