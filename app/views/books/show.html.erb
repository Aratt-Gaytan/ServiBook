

<%= render 'shared/header_admin' if user_signed_in?   %>

<%=  link_to 'Back to books', books_path, class: 'btn btn-light m-3 bi bi-arrow-90deg-left text-dark  text-light' %>
<div class="container rounded p-2 ">
    <div class="row  ">
        <div class="col-1 offset-1 m-3 ">
            <% if @book.photo.attached? %>
                <%= image_tag(@book.photo,  class: 'rounded', width: "200px")  %>
            <% else %>
                <%= image_tag 'default.jpg', class: 'rounded', width: "200px" %>
            <% end %>
        </div>
        <div class="col-8 offset-1">

            <h1>
                <%= "#{@book.title} (#{@book.author.first_name} #{@book.author.last_name} ) " %>
                <%= "#{@book.publication_year}"%> 
            </h1>

            <p>
                <%= @book.synopsis%>
            </p>


            <%= button_to 'Remove', book_path(@book), method: 'delete',class: 'btn btn-outline-danger', data: { confirm: 'Are you sure?' } if current_user.role_id == 1 %>

            <%= link_to 'Edit', edit_book_path, class:'btn btn-outline-primary mt-3' if current_user.role_id == 1%>
        </div>
    </div>
</div>

