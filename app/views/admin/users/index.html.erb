<%= render 'shared/header_admin' if user_signed_in?  %>

<%= link_to "New user", new_admin_user_path, class: 'btn btn-light m-3 bi  bi-plus-lg text-dark' if current_user.role_id == 1 || 3%>

<div class="container p-4 mt-4">
  <h1 class="text-center">Users</h1>
  <div class="row">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
                <th scope="col">Role</th>
                <th></th>
                <th></th>


            </tr>
        </thead>
        <tbody>

            <% @users.each do |user| %>
                <tr>
                    <td>
                        <%= user.id%>
                    </td>

                    <td>
                        <%= user.name%>
                    </td>
                    <td>
                        <%= user.email%>
                    </td>
                    <td>
                        <%= user.phone%>
                    </td>
                    <td>
                        <%= user.address%>
                    </td>
                    <td>
                        <%= user.role.name%>
                    </td>

                    <td>
                        <%= button_to 'Remove', admin_user_path(user), method: 'delete',class: 'btn btn-outline-danger', data: { confirm: 'Are you sure?' } if current_user.role_id == 1 || 3 %>
                    </td>
                    <td>
                        <%= link_to 'Edit', edit_admin_user_path(user), class:'btn btn-outline-primary ' if current_user.role_id == 1 || 3%>
                    </td>

                </tr>
                  
  
            <% end %>

        </tbody>
    </table>

  </div>
</div>