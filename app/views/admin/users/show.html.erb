<%= render 'shared/header_admin' if user_signed_in?   %>

<%=  link_to 'Back', admin_users_path, class: 'btn btn-light m-3 bi bi-arrow-90deg-left text-dark  text-light' %>
<div class="container rounded p-2 ">
    <div class="row">
        <div class="col offset-1 m-3 ">

            <h1>
                <%= "#{@user.name}" %>
                <%= "(#{@user.role.name})"%> 
            </h1>

            <p>
                <%= @user.email%>
            </p>
            <p>
                <%= @user.phone%>
            </p>
            <p>
                <%= @user.address%>
            </p>

            <%= button_to 'Remove', admin_user_path(@user), method: 'delete',class: 'btn btn-outline-danger', data: { confirm: 'Are you sure?' } if current_user.role_id == 1 || 3 %>

            <%= link_to 'Edit', edit_admin_user_path(@user), class:'btn btn-outline-primary mt-3' if current_user.role_id == 1 || 3%>
        </div>
    </div>
</div>

